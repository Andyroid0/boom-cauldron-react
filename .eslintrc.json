{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@shopify/typescript",
        "plugin:@shopify/react",
        "plugin:@shopify/prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "unused-imports"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-console": "warn",
        "no-unused-vars": "warn",
        "unused-imports/no-unused-imports": "error",
        "no-new": "off"
        }
}
